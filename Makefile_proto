NAME = libftprintf.a
FLAGS = -Wall -Werror -Wextra
SRCS =
OBJ = $(SRCS:.c=.o)
HEADERS =

all: $(NAME)

%.o: %.c
	gcc -g -o $@ -c $< $(CFLAGS)

$(NAME): $(OBJ)
	make -C ./libft
	gcc $(OBJ) -o $(NAME) -Llibft -lft -I$(HEADERS)
	ar rc $(NAME) $(OBJ)
	ranlib $(NAME)

clean:
	/bin/rm -f $(OBJ)
	make -C ./libft clean

fclean: clean
	/bin/rm -f $(NAME)
	make -C ./libft fclean

re: fclean all

.PHONY: all clean fclean re
